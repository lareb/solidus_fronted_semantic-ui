<% if product.available? %>
  <li id="product_<%= product.id %>" class="isotope-item" data-hook="featured_products_list_item">

    <div class="product-box5">
        <div class="product-image">
        <%= link_to product_image(product), product %>
        </div>

                    <%= link_to truncate(product.name, :length => 50), product, :class => 'title', :itemprop => "name", :title => product.name %>
            <p class="price selling" itemprop="price"><%= product.price_in(current_currency).display_price %></p>

    </div>
  </li>
<% end %>
