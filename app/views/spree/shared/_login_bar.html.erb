<% if spree_current_user %>
  <li class-"item"><%= link_to Spree.t(:my_account), spree.account_path, :class => "ui large basic button" %></li>
  <li class="item"><%= link_to Spree.t(:logout), spree.logout_path, :class => "ui large basic button"  %></li>
<% else %>
  <li id="link-to-login" class="item"><%= link_to Spree.t(:login), spree.login_path, :class => "ui large basic button"  %></li>
<% end %>
